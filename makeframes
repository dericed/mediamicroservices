#!/bin/bash
# makewaveform, makes a series of still images from a video file or package input
# v 2.0 integrate with makederiv to streamline derivative creation
VERSION="1.0"
SCRIPTDIR=$(dirname $(which "${0}"))
. "${SCRIPTDIR}/mmfunctions" || { echo "Missing '${SCRIPTDIR}/mmfunctions'. Exiting." ; exit 1 ;};

_usage(){
    echo
    echo
    _report -d "makeframes is an alias for the updated function makederiv (options below)."
    _report -d "You can create a series of still images from a video file or package input with makederiv by typing: 'makederiv -T frames [options] [input]'."
    _report -d "Or continue to use makeframes using the valid options below."
    "${SCRIPTDIR}/makederiv" -h
}
[ "${#}" = 0 ] && _usage
"${SCRIPTDIR}/makederiv" -T frames "${@}"
